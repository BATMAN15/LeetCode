#include<iostream>
#include<algorithm>
#include<vector>
using namespace std;

class Solution {
public:
	int minCut(string s) {
		int n = s.size();
		vector<int> res(n + 1);
		vector<vector<bool> > p(n, vector<bool>(n, false));
		for (int i = 0; i <= n; ++i)
			res[i] = n - i;
		for (int i = n - 1; i >= 0; --i)
		{
			for (int j = i; j < n; ++j)
			{
				if (s[i] == s[j] && ((j - i) < 2 || p[i + 1][j - 1]))
				{
					p[i][j] = true;
					res[i] = min(res[i], res[j + 1] + 1);
				}
			}
		}
		return res[0] - 1;
	}
};

int main()
{
	system("pause");
}
